<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.grocery">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Grocery">
        <activity android:name=".activites.AddCard"></activity>
        <activity android:name=".activites.OrderDetails" />
        <activity android:name=".activites.OrderActivity" />
        <activity android:name=".activites.MyAccount" />
        <activity android:name=".activites.OrderPlaced" />
        <activity android:name=".activites.Payment" />
        <activity android:name=".activites.AddAddress" />
        <activity android:name=".activites.AddressActivity" />
        <activity android:name=".activites.Cart" />
        <activity android:name=".activites.InitialActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activites.Register" />
        <activity android:name=".activites.Login" />
        <activity android:name=".activites.ProductDetails" />
        <activity android:name=".activites.SubCategory" />
        <activity android:name=".activites.MainActivity" />
    </application>

</manifest>