<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="5dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_view_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_toLeftOf="@+id/image_view_cancel"
            android:padding="10dp"
            android:src="@drawable/ic_baseline_edit_24" />

        <ImageView
            android:id="@+id/image_view_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:padding="10dp"
            android:src="@drawable/ic_baseline_cancel_24" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_view_cancel"
            android:padding="15dp">

            <TextView
                android:id="@+id/text_view_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_view_house_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_view_type"
                android:text="1234"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/text_view_street_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/text_view_house_no"
                android:layout_marginStart="6dp"
                android:layout_toRightOf="@id/text_view_house_no"
                android:text="MyName"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/text_view_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_view_street_number"
                android:text="Seattle"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/text_view_pincode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/text_view_city"
                android:layout_marginStart="6dp"
                android:layout_toRightOf="@id/text_view_city"
                android:text="941234"
                android:textColor="@color/black"
                android:textSize="14dp" />
        </RelativeLayout>

        <RadioButton
            android:id="@+id/radio_button_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>